{% extends 'base.html.twig' %}

{% block title %}Plats_par_catégories
{% endblock %}

{% block body %}
	<div class="container col-xs-7 col-12 div_cat mt-5 py-5">

		<div class="col-xs-4 col-4 text-center mx-auto my-5 cat_count rounded p-3">
			<h1>Nos plats ({{ plats | length }})</h1>
		</div>

		<div class="d-flex flex-wrap liste_cat">
			{% for plat in plats %}
				<div class="card liste-cat m-auto my-3" id="card" style="width: 18rem;">
					<span class="d-block text-center">
						<a
							href="{{path('app_detail_plat', {id: plat.id})}}" style="text-decoration:none">
							<!-- affichage des noms de catégories -->
							<h5 class="card-title text-center">
								<strong>"{{ plat.libelle |upper }}"</strong>
							</h5>
							<!-- partie inférieure avec l'image -->
							<img src="{{'/images_the_district/food/' ~ plat.image}}" alt="image" srcset="" class="card-img-top img-fluid">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewbox="0 0 16 16">
								<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
							</svg>
							Details
						</a>
					</span>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
